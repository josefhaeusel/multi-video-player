{
  "name": "museum-video-player",
  "author": "josef.haeusel.klangerfinder",
  "description": "Adaptive Video Player for Museum.",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "cd backend; npm run build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "start:dev": "electron ."
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "win": {
      "target": "squirrel",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-deb": "^6.0.0",
    "@electron-forge/maker-rpm": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "electron": "^11.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "public/imported_modules",
          "backend/dist"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@remotion/renderer": "^4.0.189",
    "electron-log": "^5.1.7",
    "electron-squirrel-startup": "^1.0.1",
    "kill-port-process": "^3.2.1"
  }
}
